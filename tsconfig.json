{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "eslint-config-upleveled/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-native", // Keep React Native JSX support
    "target": "ESNext", // Modern JS features
    "module": "ESNext", // Ensure ESM syntax is used
    "moduleResolution": "node", // Resolve modules in a Node.js-like manner
    "strict": true, // Recommended for type safety
    "esModuleInterop": true // Allow CommonJS default imports
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    "**/*.mjs",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
